<% content_for :breadcrumb do %>
  <ul class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to "Home", :root %>
    </li>
    <li class="breadcrumb-item">
      <%= link_to "Customers", :customers %>
    </li>
  </ul>
<% end %>

<table class="table table-striped table-hover">
  <tfoot>
    <tr>
      <td colspan="6">
        <%= link_to :new_customer, class: "btn btn-primary" do %>
          <i class="icon icon-plus"></i> New customer
        <% end %>
      </td>
    </tr>
  </tfoot>
  <thead>
    <tr>
      <th>Name</th>
      <th>Plan</th>
      <th>Gender</th>
      <th>Confirmed</th>
      <th>Approved</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.plan %></td>
        <td><%= customer.gender %></td>
        <td><%= customer.confirmed? %></td>
        <td><%= customer.approved? %></td>
        <td><%= link_to "Edit", [ :edit, customer ] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
