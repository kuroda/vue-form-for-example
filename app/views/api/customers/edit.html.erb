<div data-title="Editing a customer" data-extension="editForm"
  data-url="#customers/<%= @customer.id %>/edit">

  <ul class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to "Home", :root %>
    </li>
    <li class="breadcrumb-item">
      <%= link_to "SPA", :spa %>
    </li>
    <li class="breadcrumb-item">
      <%= link_to "List", :api_customers, "@click.prevent" => "visit" %>
    </li>
  </ul>

  <%= vue_form_with model: [ :api, @customer ], id: "customer-form",
    html: { "@submit.prevent" => "submit" } do |f| %>
    <%= render "fields", f: f %>

    <div class="form-group">
      <%= f.submit "Update", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
