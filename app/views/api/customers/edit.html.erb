<%
  metadata = {
    "title" => "Editing a customer",
    "handler" => "editForm",
    "url" => "#customers/#{@customer.id}/edit"
  }
%>
<div data-meta='<%= metadata.to_json %>' data-open='false'>
  <div>
    <span @click="visit('/api/customers')">List of customer</span>
  </div>

  <%= vue_form_with model: [ :api, @customer ], id: "customer-form",
    html: { "@submit.prevent" => "submit" } do |f| %>
    <%= render "fields", f: f %>
    <div>
      <%= f.submit "Update" %>
    </div>
  <% end %>
</div>
